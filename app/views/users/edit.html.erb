<main>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <%= form_with model: @user do |f| %>
        <input type="hidden" name="_method" value="patch" autocomplete="off">
        <div class="form-group">
          <label for="user_Name">Name</label>
          <%= f.text_field :name, class: "form-control name", autofocus: true, id:"inputName", placeholder:"名前"%>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
          <%= f.file_field :profile_image, class: "form-control-file user_image", placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="form-group">
          <label for="inputIntoroduction">Introduction</label>
          <%= f.text_area :introduction, class: "form-control introduction", autofocus: true, id:"inputIntroduction", placeholder:"自己紹介" %>
        </div>
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        <% end %>
    </div>
  </div>
</div>
</main>