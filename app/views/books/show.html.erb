<h1>Books#show</h1>
<%= render 'users/user-info', books: @books, users: @users, user: @user%>
<div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= image_tag @user.get_profile_image(80,80) %></td>
          <td><%= link_to @user.name, books_path(book.id) %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Edit", edit_book_path(book.id), class: "btn btn-success text-white", method: :get %></td>
          <td><%= link_to "Destroy", book_path, class: "btn btn-danger text-white", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  </div><!--部分テンプレートの</div>不足分-->
</div><!--部分テンプレートの</div>不足分-->
