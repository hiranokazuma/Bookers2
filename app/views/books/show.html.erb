<%= render 'users/user-info', books: @books, users: @users, user: @user, book: Book.new %>
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>

        <tr>
          <td>
            <%=link_to user_path(current_user) do %>
            <%= image_tag @user.get_profile_image(100,100) %>
          <% end %><br>
          <%= link_to @user.name, user_path(current_user) %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @user == current_user %>
          <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success text-white", method: :get %></td>
          <td><%= link_to "Destroy", book_path(@book.id), class: "btn btn-danger text-white", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
  </div><!--部分テンプレートの</div>不足分-->
</div><!--部分テンプレートの</div>不足分-->
